{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "files": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "meta": {"type": "object"},
          "sections": {
            "type": "array",
            "items": {"$ref": "#/definitions/section"}
          },
          "prompts": {
            "type": "array",
            "items": {"$ref": "#/definitions/prompt"}
          }
        },
        "required": ["sections", "prompts"]
      }
    },
    "links": {
      "type": "array",
      "items": {"type": "object"}
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  },
  "definitions": {
    "section": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "level": {"type": "integer"},
        "title": {"type": "string"},
        "line": {"type": "integer"},
        "prompts": {
          "type": "array",
          "items": {"$ref": "#/definitions/prompt"}
        }
      },
      "required": ["title", "line"]
    },
    "prompt": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "args": {"type": "object"},
        "body": {"type": "string"},
        "file": {"type": "string"},
        "line": {"type": "integer"},
        "section": {"type": "string"}
      },
      "required": ["type", "file", "line"]
    }
  }
}
